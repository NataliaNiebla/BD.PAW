#Ej.1 Listado de clientes y sus ordenes
SELECT Clientes.NombreCliente, Clientes.Email, Ordenes.MontoTotal
FROM Clientes
INNER JOIN Ordenes
ON Clientes.ClienteID= Ordenes.ClienteID;

#Ej.2 Productos y Categorias
SELECT Productos.NombreProducto, Productos.Precio, Categorias.NombreCategoria
FROM Productos
INNER JOIN Categorias
ON Productos.ProductoID= Categorias.CategoriaID;

#Ej.3 Ã“rdenes y Productos detallados
SELECT 
Ordenes.OrdenID, 
Ordenes.FechaOrden, 
Productos.NombreProducto, 
DetalleOrden.Cantidad, 
DetalleOrden.PrecioUnitario
FROM 
DetalleOrden
INNER JOIN 
Ordenes 
ON DetalleOrden.OrdenID = Ordenes.OrdenID
INNER JOIN 
Productos ON DetalleOrden.ProductoID = Productos.ProductoID;

#Ej.4 Ventas por Categoria
SELECT 
Categorias.NombreCategoria, 
SUM(DetalleOrden.Cantidad * DetalleOrden.PrecioUnitario) AS MontoTotal
FROM 
Categorias
INNER JOIN 
Productos ON Categorias.CategoriaID = Productos.CategoriaID
INNER JOIN 
DetalleOrden ON Productos.ProductoID = DetalleOrden.ProductoID
INNER JOIN 
Ordenes ON DetalleOrden.OrdenID = Ordenes.OrdenID
GROUP BY 
Categorias.NombreCategoria
HAVING 
SUM(DetalleOrden.Cantidad * DetalleOrden.PrecioUnitario) > 0;